<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoomCreate">

    <TextView
        android:id="@+id/txtNamaBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="Nama Barang : "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMerkBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Merk Barang :"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtNamaBarang"
        app:layout_constraintStart_toStartOf="@+id/txtNamaBarang"
        app:layout_constraintTop_toBottomOf="@+id/txtNamaBarang" />

    <TextView
        android:id="@+id/txtHargaBarang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Harga Barang :"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtMerkBarang"
        app:layout_constraintStart_toStartOf="@+id/txtMerkBarang"
        app:layout_constraintTop_toBottomOf="@+id/txtMerkBarang" />

    <EditText
        android:id="@+id/edtNamaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtNamaBarang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtNamaBarang"
        app:layout_constraintTop_toTopOf="@+id/txtNamaBarang" />

    <EditText
        android:id="@+id/edtMerkBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtMerkBarang"
        app:layout_constraintEnd_toEndOf="@+id/edtNamaBarang"
        app:layout_constraintStart_toStartOf="@+id/edtNamaBarang"
        app:layout_constraintTop_toTopOf="@+id/txtMerkBarang" />

    <EditText
        android:id="@+id/edtHargaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtHargaBarang"
        app:layout_constraintEnd_toEndOf="@+id/edtMerkBarang"
        app:layout_constraintStart_toStartOf="@+id/edtMerkBarang"
        app:layout_constraintTop_toTopOf="@+id/txtHargaBarang" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHargaBarang" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

</androidx.constraintlayout.widget.ConstraintLayout>